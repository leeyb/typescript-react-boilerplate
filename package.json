{
    "name": "typescript-react-boilerplate",
    "version": "1.0.0",
    "description": "Minimal example for React with TypeScript.",
    "license": "MIT",
    "main": "dist/src/index",
    "author": {
        "email": "xiaochao.k@gmail.com",
        "name": "nonoroazoro",
        "url": "http://www.alibabagroup.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nonoroazoro/typescript-react-boilerplate"
    },
    "homepage": "https://github.com/nonoroazoro/typescript-react-boilerplate",
    "bugs": {
        "url": "https://github.com/nonoroazoro/typescript-react-boilerplate/issues"
    },
    "keywords": [
        "boilerplate",
        "react",
        "typescript-react-boilerplate",
        "typescript"
    ],
    "scripts": {
        "precommit": "lint-staged",
        "clean": "rimraf dist/*",
        "start": "npm run dev",
        "dev": "node ./scripts/devServer",
        "build:dev": "npm run clean && webpack --config ./scripts/webpack/webpack.config.dev.js --progress",
        "build:prod": "npm run clean && webpack --config ./scripts/webpack/webpack.config.prod.js --progress",
        "test": "jest --config ./scripts/jest/jest.config.js",
        "test:watch": "npm test -- --watch",
        "test:cov": "npm test -- --coverage",
        "test:update": "npm test -- --updateSnapshot"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "classnames": "^2.2.6",
        "history": "^4.7.2",
        "normalize.css": "^8.0.1",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-redux": "^6.0.1",
        "react-router-dom": "^4.3.1",
        "react-router-redux": "^5.0.0-alpha.9",
        "redux": "^4.0.1",
        "redux-actions": "^2.6.5",
        "redux-promise": "^0.6.0"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.7",
        "@types/enzyme": "^3.9.0",
        "@types/history": "^4.7.2",
        "@types/jest": "^24.0.9",
        "@types/react": "^16.8.6",
        "@types/react-dom": "^16.8.2",
        "@types/react-redux": "^7.0.1",
        "@types/react-router-dom": "^4.3.1",
        "@types/react-router-redux": "^5.0.18",
        "@types/redux-actions": "^2.3.2",
        "@types/redux-immutable-state-invariant": "^2.1.0",
        "@types/redux-promise": "^0.5.28",
        "babel-eslint": "^10.0.1",
        "cache-loader": "^2.0.1",
        "chalk": "^2.4.2",
        "css-loader": "^2.1.0",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.10.0",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^5.15.1",
        "eslint-config-zoro": "^1.4.6",
        "file-loader": "^3.0.1",
        "fork-ts-checker-webpack-plugin": "^0.5.2",
        "husky": "^1.3.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.1.0",
        "less": "^3.9.0",
        "less-loader": "^4.1.0",
        "lint-staged": "^8.1.5",
        "mini-css-extract-plugin": "^0.5.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "raf": "^3.4.1",
        "react-hot-loader": "^4.7.2",
        "redux-devtools-extension": "^2.13.8",
        "redux-immutable-state-invariant": "^2.1.0",
        "redux-mock-store": "^1.5.3",
        "rimraf": "^2.6.3",
        "style-loader": "^0.23.1",
        "thread-loader": "^2.1.2",
        "ts-jest": "^24.0.0",
        "ts-loader": "^5.3.3",
        "tslint": "^5.13.1",
        "tslint-react": "^3.6.0",
        "typescript": "^3.3.3333",
        "typings-for-css-modules-loader": "^1.7.0",
        "url-loader": "^1.1.2",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.2.1"
    },
    "lint-staged": {
        "./src/**/*.tsx?": [
            "tslint",
            "git add"
        ]
    }
}
