{
    "name": "typescript-react-boilerplate",
    "version": "1.0.0",
    "description": "Minimal example for React with TypeScript.",
    "license": "MIT",
    "main": "dist/src/index",
    "author": {
        "email": "xiaochao.k@gmail.com",
        "name": "nonoroazoro",
        "url": "http://www.alibabagroup.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nonoroazoro/typescript-react-boilerplate"
    },
    "homepage": "https://github.com/nonoroazoro/typescript-react-boilerplate",
    "bugs": {
        "url": "https://github.com/nonoroazoro/typescript-react-boilerplate/issues"
    },
    "keywords": [
        "boilerplate",
        "react",
        "typescript-react-boilerplate",
        "typescript"
    ],
    "scripts": {
        "precommit": "lint-staged",
        "clean": "rimraf dist/*",
        "start": "npm run dev",
        "dev": "node ./scripts/devServer",
        "build:dev": "npm run clean && webpack --config ./scripts/webpack/webpack.config.dev.js --progress",
        "build:prod": "npm run clean && webpack --config ./scripts/webpack/webpack.config.prod.js --progress",
        "test": "jest --config ./scripts/jest/jest.config.js",
        "test:watch": "npm test -- --watch",
        "test:cov": "npm test -- --coverage",
        "test:update": "npm test -- --updateSnapshot"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "classnames": "^2.2.5",
        "normalize.css": "^8.0.0",
        "react": "^16.3.1",
        "react-dom": "^16.3.1",
        "react-redux": "^5.0.7",
        "redux": "^3.7.2",
        "redux-actions": "^2.3.0",
        "redux-promise": "^0.5.3"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.3",
        "@types/jest": "^22.2.2",
        "@types/react": "^16.3.5",
        "@types/react-dom": "^16.0.4",
        "@types/react-redux": "^5.0.15",
        "@types/redux-actions": "^2.2.4",
        "@types/redux-immutable-state-invariant": "^2.0.4",
        "@types/redux-promise": "^0.5.28",
        "babel-eslint": "^8.2.2",
        "cache-loader": "^1.2.2",
        "chalk": "^2.3.2",
        "css-loader": "^0.28.11",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.3",
        "eslint": "^4.19.1",
        "eslint-config-zoro": "^1.4.5",
        "file-loader": "^1.1.11",
        "fork-ts-checker-webpack-plugin": "^0.4.1",
        "husky": "^0.14.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^22.4.3",
        "less": "^3.0.1",
        "less-loader": "^4.1.0",
        "lint-staged": "^7.0.4",
        "mini-css-extract-plugin": "^0.4.0",
        "optimize-css-assets-webpack-plugin": "^4.0.0",
        "raf": "^3.4.0",
        "react-hot-loader": "^4.0.1",
        "redux-devtools-extension": "^2.13.2",
        "redux-immutable-state-invariant": "^2.1.0",
        "rimraf": "^2.6.2",
        "should": "^13.2.1",
        "style-loader": "^0.20.3",
        "thread-loader": "^1.1.5",
        "ts-jest": "^22.4.2",
        "ts-loader": "^4.2.0",
        "tslint": "^5.9.1",
        "tslint-react": "^3.5.1",
        "typescript": "^2.8.1",
        "url-loader": "^1.0.1",
        "webpack": "^4.5.0",
        "webpack-cli": "^2.0.14",
        "webpack-dev-server": "^3.1.3"
    },
    "lint-staged": {
        "./src/**/*.tsx?": [
            "tslint",
            "git add"
        ]
    }
}
