{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowUnreachableCode": true,
        "declaration": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "rootDir": ".",
        "pretty": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}
